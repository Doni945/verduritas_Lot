<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FDF2"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9CEC32"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Verduritas SA"
            android:textColor="#424242"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Refresh Button -->
        <ImageView
            android:id="@+id/refreshButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Actualizar"
            android:src="@drawable/logout" />
    </LinearLayout>

    <!-- Welcome Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bienvenido Usuario"
        android:textColor="#424242"
        android:textSize="18sp" />

    <!-- Crop Table -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#C6E377">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#9CEC32">

            <TextView
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:text="Tus Cosechas"
                android:textColor="#424242"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ID agregado -->
            <ImageView
                android:id="@+id/addCosechaButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus"
            android:contentDescription="AÃ±adir Cosecha"
            android:clickable="true"
            android:focusable="true" />
        </TableRow>
    </TableLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDITAR"
            android:backgroundTint="#9CEC32"
            android:padding="12dp"
            android:textColor="#555"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIMINAR"
            android:backgroundTint="#E8FACE"
            android:padding="12dp"
            android:textColor="#555"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>


