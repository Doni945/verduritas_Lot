<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FFF0"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#A5D55C"
        android:gravity="center_vertical">

        <!-- Flecha hacia atrás -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/atras3"
            android:contentDescription="Flecha hacia atrás"
            android:layout_marginStart="16dp" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Verduritas SA"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Campos de formulario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Alias"
        android:textSize="16sp"
        android:textColor="#4B4B4B" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:hint="Escribe un alias"
        android:textColor="#000"
        android:textColorHint="#A3A3A3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fecha de siembra"
        android:textSize="16sp"
        android:textColor="#4B4B4B" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:hint="Selecciona la fecha"
        android:textColor="#000"
        android:textColorHint="#A3A3A3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Planta"
        android:textSize="16sp"
        android:textColor="#4B4B4B" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:hint="Escribe la planta"
        android:textColor="#000"
        android:textColorHint="#A3A3A3" />

    <!-- RecyclerView para mostrar la lista de cultivos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCultivos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />

    <!-- Botón guardar -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#A5D55C"
        android:text="Guardar"
        android:textSize="16sp"
        android:textColor="#000"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>